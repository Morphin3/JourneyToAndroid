<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        >

        <TextView
            android:id="@+id/tv_title"
            style="@style/StyledTV"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="标题"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/iv_cancel_publish"
            style="@style/iv_common"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_cancel_publish"/>
    </RelativeLayout>


    <View
        android:id="@+id/v_fake"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        />


    <RelativeLayout
        android:id="@+id/rl_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/v_fake"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="26dp"
        android:layout_toLeftOf="@id/v_fake"
        android:visibility="invisible"
        >

        <ImageView
            android:id="@+id/iv_topic"
            style="@style/iv_common"
            android:padding="9dp"
            android:src="@drawable/ic_topic"
            />

        <TextView
            android:id="@+id/tv_topic"
            style="@style/PublishTextView"
            android:layout_below="@id/iv_topic"
            android:text="@string/publish_type_topic"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_illustration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/v_fake"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@id/v_fake"
        android:visibility="invisible"
        >

        <ImageView
            android:id="@+id/iv_illustration"
            style="@style/iv_common"
            android:padding="9dp"
            android:src="@drawable/ic_illustration"
            />

        <TextView
            android:id="@+id/tv_illustration"
            style="@style/PublishTextView"
            android:layout_below="@id/iv_illustration"
            android:text="@string/publish_type_ikon"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_cos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_fake"
        android:layout_marginRight="26dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@id/v_fake"
        android:visibility="invisible"
        >

        <ImageView
            android:id="@+id/iv_cos"
            style="@style/iv_common"
            android:padding="9dp"
            android:src="@drawable/ic_cos"
            />

        <TextView
            android:id="@+id/tv_cos"
            style="@style/PublishTextView"
            android:layout_below="@id/iv_cos"
            android:text="@string/publish_type_cos"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_article"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_fake"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/v_fake"
        android:visibility="invisible"
        >

        <ImageView
            android:id="@+id/iv_article"
            style="@style/iv_common"
            android:padding="9dp"
            android:src="@drawable/ic_article"
            />

        <TextView
            android:id="@+id/tv_article"
            style="@style/PublishTextView"
            android:layout_below="@id/iv_article"
            android:text="@string/publish_type_atricle"/>
    </RelativeLayout>

</RelativeLayout>